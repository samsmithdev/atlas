generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "typedSql"]
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}

model Subject {
  id          String @id @default(cuid())
  shortcode   String @unique
  name        String
  description String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectSequence Int @default(0)

  projects Project[]

  @@map("subjects")
}

model Project {
  id String @id @default(cuid())

  readableId String @unique

  name         String
  created_date DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  description  String

  fileSequence Int @default(0)

  files     File[]
  folders   Folder[]
  subject   Subject? @relation(fields: [subjectId], references: [id])
  subjectId String?

  semantic_vector Unsupported("vector(768)")?

  @@map("projects")
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  files File[]

  @@unique([projectId, name]) // Prevent duplicate folder names in the same project
  @@map("folders")
}

model File {
  id          String   @id @default(cuid())
  readableId  String   @unique
  name        String
  createdDate DateTime @default(now()) @map("created_at")
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  description String
  tags        String[]
  content     Json     @default("[]")

  // Optional: The File might be inside a Folder. If null, it's at Project Root.
  folderId String?
  folder   Folder? @relation(fields: [folderId], references: [id])

  // Assets that belong to this file (Attachments/Embeds)
  assets Asset[]

  // "hidden" search columns managed by db triggers
  // stores the extracted text for fast keyword search
  fts_vector      Unsupported("tsvector")?
  // stores the AI embeddings for "ATLAS" search
  semantic_vector Unsupported("vector(768)")?
  project         Project?                    @relation(fields: [projectId], references: [id])
  projectId       String?

  // add index on hidden column for speed
  @@index([fts_vector], type: Gin)
  @@map("files") // lowercase table names are often easier in raw SQL
}

model InboxItem {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Small text content (a quick thought, or the transcript of a voice note)
  content String? @db.Text

  // Status to track if you've processed it
  status InboxStatus @default(PENDING)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // An inbox item might have assets attached (audio, image, etc.)
  assets Asset[]

  @@map("inbox_items")
}

model Asset {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String // Display name

  // Minio/S3 Details
  bucket   String
  key      String // The path in the bucket
  mimeType String
  size     Int

  // Metadata for your "Smart" features
  transcript String? @db.Text // For Audio/Video
  altText    String? // For Images
  duration   Int? // For Audio/Video (in seconds)
  blurHash   String? // For Images (UI polish)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Polymorphic-ish relation: An Asset belongs to EITHER a File OR an InboxItem
  // (Or potentially neither if it's "archived" but not deleted)
  fileId String?
  file   File?   @relation(fields: [fileId], references: [id], onDelete: Cascade)

  inboxItemId String?
  inboxItem   InboxItem? @relation(fields: [inboxItemId], references: [id], onDelete: SetNull)

  @@map("assets")
}

enum InboxStatus {
  PENDING
  PROCESSED
  ARCHIVED
}

// Auth

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Connect to your Logic
  subjects Subject[]
  projects Project[]
  files    File[]

  assets Asset[]

  inboxItems InboxItem[]

  folders Folder[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
