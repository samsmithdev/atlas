generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "typedSql"] // , "typedSql"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}

model Subject {
  id          String @id @default(cuid())
  shortcode   String @unique
  name        String
  description String

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectSequence Int @default(0)

  projects Project[]

  @@map("subjects")
}

model Project {
  id String @id @default(cuid())

  readableId String @unique

  name         String
  created_date DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  description  String

  fileSequence Int @default(0)

  files     File[]
  subject   Subject? @relation(fields: [subjectId], references: [id])
  subjectId String?

  semantic_vector Unsupported("vector(768)")?

  @@map("projects")
}

model File {
  id              String                      @id @default(cuid())
  readableId      String                      @unique
  name            String
  createdDate     DateTime                    @default(now()) @map("created_at")
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  description     String
  tags            String[]
  content         Json                        @default("[]")
  // "hidden" search columns managed by db triggers
  // stores the extracted text for fast keyword search
  fts_vector      Unsupported("tsvector")?
  // stores the AI embeddings for "ATLAS" search
  semantic_vector Unsupported("vector(768)")?
  project         Project?                    @relation(fields: [projectId], references: [id])
  projectId       String?

  // add index on hidden column for speed
  @@index([fts_vector], type: Gin)
  @@map("files") // lowercase table names are often easier in raw SQL
}

// Auth

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Connect to your Logic
  subjects      Subject[]
  projects      Project[]
  files         File[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}