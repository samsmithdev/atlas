generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Subject {
  id          String    @id @default(cuid())
  shortcode   String
  name        String
  description String
  projects    Project[]
}

model Project {
  id           String   @id @default(cuid())
  name         String
  created_date DateTime @default(now())
  author       String
  description  String
  files        File[]
  subject      Subject? @relation(fields: [subjectId], references: [id])
  subjectId    String?
}

model File {
  id          String   @id @default(cuid())
  name        String
  createdDate DateTime @default(now()) @map("created_at")
  author      String
  description String
  tags        String[]
  contents    String
  project     Project? @relation(fields: [projectId], references: [id])
  projectId   String?
}
